{
    "compilerOptions": {
        "outDir": "dist",
        "target": "es2016",
        "module": "commonjs",
        "moduleResolution": "Node",
        "declaration": true,
        "sourceMap": true,
        "jsx": "react",
        "allowJs": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
}
